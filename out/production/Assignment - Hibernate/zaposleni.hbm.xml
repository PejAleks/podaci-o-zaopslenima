<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Zaposleni" table="zaposleni">

        <meta attribute="class-description">
            This class contains the person details
        </meta>

        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>

        <property name="ime" column="ime" type="string"/>
        <property name="godine" column="godine" type="int"/>
        <property name="adresa" column="adresa" type="string"/>
        <property name="plata" column="plata" type="double"/>

    </class>
</hibernate-mapping>